@model HealthCare.API.Data.Entities.User
@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<h2>Patients</h2>

<div>
    <h4>Users</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Model.ImageFullPath" style="width: 200px; height: 200px; border-radius: 150px;" />
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Udit User</a>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    }

</div>
<br />

<div class="row">
    <div class="col-md-24">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Patients</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().Age)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().EPCNNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().bloodType.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().City.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().Natianality.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().gendre.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().HistoriesCount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Patients.FirstOrDefault().patientPhotos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserPatients.FirstOrDefault().Patients.FirstOrDefault().ImageFullPath)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.UserPatients.FirstOrDefault().Patients)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EPCNNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.bloodType.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Natianality.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.gendre.Description)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.HistoriesCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PatientPhotosCount)
                                </td>
                                <td>
                                    <img src="@item.ImageFullPath" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                                </td>
                                <td>
                                    <a asp-action="DetailsPatient" asp-route-id="@item.Id" class="btn btn-info">Histories<i class="glyphicon glyphicon-align-justify"></i></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="/js/deleteDialog.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/English.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });

            // Delete item
            sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Users/DeletePatient/', false);
        });
    </script>
}
