@model HealthCare.API.Models.DetailViewModel
@{
    ViewData["Title"] = "EditDetail";
}

<h1>EditDetail</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditDetails" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HistoryId" />

            <partial name="_Detail" />

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="DetailsHistory" asp-route-id="@Model.HistoryId" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
